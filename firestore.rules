rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdminEmail() {
      return request.auth.token.email in ['admin@auraskills.com', 'admin@vidyamitra.com'];
    }
    
    // Users collection - Allow users to read/write their own data
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdminEmail());
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && (request.auth.uid == userId || isAdminEmail());
      allow delete: if isAdminEmail();
    }
    
    // Interviews collection
    match /interviews/{interviewId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Practice Aptitude
    match /practiceAptitude/{id} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Practice Interviews
    match /practiceInterviews/{id} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Practice Coding
    match /practiceCoding/{id} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Bot Interviews
    match /botInterviews/{id} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Resumes
    match /resumes/{id} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Round 1 Aptitude
    match /round1Aptitude/{id} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() || isAdminEmail();
      allow delete: if isAdminEmail();
    }
    
    // Roles
    match /roles/{roleId} {
      allow read: if isAuthenticated();
      allow write: if isAdminEmail();
    }
    
    // Career Plans
    match /careerPlans/{id} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Resume Builds
    match /resumeBuilds/{id} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Gap Analyses
    match /gapAnalyses/{id} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Learning Roadmaps
    match /learningRoadmaps/{id} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // AI Narrative Cache
    match /aiNarrativeCache/{id} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // User Skill Profiles
    match /userSkillProfiles/{id} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
  }
}
