rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      // Check if user document exists and has isAdmin = true
      // OR if email matches known admin email (temporary fallback)
      return isAuthenticated() && (
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true) ||
        request.auth.token.email == 'admin@mockmate.com'
      );
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - users can read/write their own data, admins can read all
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
      allow update: if isOwner(userId);
    }
    
    // Interviews collection
    match /interviews/{interviewId} {
      // Admins can read all interviews, users can read their own
      allow read: if isAuthenticated() && 
                     (isAdmin() || resource.data.userId == request.auth.uid);
      
      // Admins can list all interviews
      allow list: if isAdmin();
      
      // Users can create interviews for themselves
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      
      // Users can update their own interviews, admins can update any
      allow update: if isAuthenticated() && 
                       (isAdmin() || resource.data.userId == request.auth.uid);
      
      // Only admins can delete interviews
      allow delete: if isAdmin();
    }
    
    // Roles collection - everyone can read, only admins can write
    match /roles/{roleId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Resumes collection - users can read/write their own, admins can read all
    match /resumes/{resumeId} {
      allow read: if isAuthenticated() && 
                     (isAdmin() || resource.data.userId == request.auth.uid);
      allow list: if isAdmin();
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && 
                       (isAdmin() || resource.data.userId == request.auth.uid);
    }
    
    // Settings collection - only admins
    match /settings/{settingId} {
      allow read, write: if isAdmin();
    }
    
    // Practice Aptitude collection - users can read/write their own results
    match /practice_aptitude/{practiceId} {
      allow read: if isAuthenticated() && 
                     (isAdmin() || resource.data.userId == request.auth.uid);
      allow list: if isAuthenticated() && 
                     (isAdmin() || request.auth.uid != null);
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && 
                       (isAdmin() || resource.data.userId == request.auth.uid);
    }
    
    // Practice Interviews collection - users can read/write their own results
    match /practice_interviews/{practiceId} {
      allow read: if isAuthenticated() && 
                     (isAdmin() || resource.data.userId == request.auth.uid);
      allow list: if isAuthenticated() && 
                     (isAdmin() || request.auth.uid != null);
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && 
                       (isAdmin() || resource.data.userId == request.auth.uid);
    }
    
    // Bot Interviews collection - users can read/write their own results
    match /botInterviews/{interviewId} {
      allow read: if isAuthenticated() && 
                     (isAdmin() || resource.data.userId == request.auth.uid);
      allow list: if isAuthenticated() && 
                     (isAdmin() || request.auth.uid != null);
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && 
                       (isAdmin() || resource.data.userId == request.auth.uid);
    }
    
    // Round 1 Aptitude collection - users can create and read their own, admins can read/update all
    match /round1_aptitude/{aptitudeId} {
      allow read: if isAuthenticated() && 
                     (isAdmin() || resource.data.userId == request.auth.uid);
      allow list: if isAuthenticated() && 
                     (isAdmin() || request.auth.uid != null);
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && 
                       (isAdmin() || resource.data.userId == request.auth.uid);
      allow delete: if isAdmin();
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
