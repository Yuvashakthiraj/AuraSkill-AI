rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if (isOwner(userId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['isAdmin'])) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Interviews collection
    match /interviews/{interviewId} {
      allow read: if isOwner(resource.data.user_id) || isAdmin();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isOwner(resource.data.user_id) || isAdmin();
      allow delete: if isOwner(resource.data.user_id) || isAdmin();
    }
    
    // Practice Aptitude
    match /practiceAptitude/{id} {
      allow read: if isOwner(resource.data.user_id) || isAdmin();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isOwner(resource.data.user_id) || isAdmin();
      allow delete: if isOwner(resource.data.user_id) || isAdmin();
    }
    
    // Practice Interviews
    match /practiceInterviews/{id} {
      allow read: if isOwner(resource.data.user_id) || isAdmin();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isOwner(resource.data.user_id) || isAdmin();
      allow delete: if isOwner(resource.data.user_id) || isAdmin();
    }
    
    // Practice Coding
    match /practiceCoding/{id} {
      allow read: if isOwner(resource.data.user_id) || isAdmin();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isOwner(resource.data.user_id) || isAdmin();
      allow delete: if isOwner(resource.data.user_id) || isAdmin();
    }
    
    // Bot Interviews
    match /botInterviews/{id} {
      allow read: if isOwner(resource.data.user_id) || isAdmin();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isOwner(resource.data.user_id) || isAdmin();
      allow delete: if isOwner(resource.data.user_id) || isAdmin();
    }
    
    // Resumes
    match /resumes/{id} {
      allow read: if isOwner(resource.data.user_id) || isAdmin();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isOwner(resource.data.user_id) || isAdmin();
      allow delete: if isOwner(resource.data.user_id) || isAdmin();
    }
    
    // Round 1 Aptitude
    match /round1Aptitude/{id} {
      allow read: if isOwner(resource.data.user_id) || isAdmin();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Roles
    match /roles/{roleId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Career Plans
    match /careerPlans/{id} {
      allow read: if isOwner(resource.data.user_id) || isAdmin();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isOwner(resource.data.user_id) || isAdmin();
      allow delete: if isOwner(resource.data.user_id) || isAdmin();
    }
    
    // Resume Builds
    match /resumeBuilds/{id} {
      allow read: if isOwner(resource.data.user_id) || isAdmin();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isOwner(resource.data.user_id) || isAdmin();
      allow delete: if isOwner(resource.data.user_id) || isAdmin();
    }
    
    // Gap Analyses
    match /gapAnalyses/{id} {
      allow read: if isOwner(resource.data.user_id) || isAdmin();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isOwner(resource.data.user_id) || isAdmin();
      allow delete: if isOwner(resource.data.user_id) || isAdmin();
    }
    
    // Learning Roadmaps
    match /learningRoadmaps/{id} {
      allow read: if isOwner(resource.data.user_id) || isAdmin();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isOwner(resource.data.user_id) || isAdmin();
      allow delete: if isOwner(resource.data.user_id) || isAdmin();
    }
    
    // AI Narrative Cache
    match /aiNarrativeCache/{id} {
      allow read: if isAdmin();
      allow write: if false;
    }
    
    // User Skill Profiles
    match /userSkillProfiles/{id} {
      allow read: if isOwner(resource.data.user_id) || isAdmin();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isOwner(resource.data.user_id) || isAdmin();
      allow delete: if isOwner(resource.data.user_id) || isAdmin();
    }
  }
}
